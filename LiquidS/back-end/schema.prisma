datasource db {
  provider = "sqlite"
  url      = "libsql://technologyline-database-trimeas.turso.io"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model employees {
  id               Int      @id @default(autoincrement())
  docket           Int
  full_name        String
  domicile         String?
  birth_date       String?
  nacionality      String?
  dni              Int
  salary_settlement String?
  sector           String?
  categoria        String?
  basic            Decimal?
  cuil             Int
  admision_date    String?
  departure_date   String?
  company          String?
  civilstatus      String?
}